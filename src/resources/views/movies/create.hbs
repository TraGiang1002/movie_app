<div class="mt-4">
    <h3>Đăng phim</h3>
    <form method="POST" action="/movies/store">
        <div class="form-group">
            <label for="name">Tên phim</label>
            <input type="text" class="form-control" id="name" name="name">
        </div>
        <div class="form-group">
            <label for="disc">Mô tả phim</label>
            <input type="text" class="form-control" id="disc" name="disc">
        </div>
        <div class="form-group">
            <label for="videoId">VideoId phim</label>
            <input type="text" class="form-control" id="videoId" name="videoId">
        </div>
        <div class="form-group">
            <label for="team">Thể loại phim</label>
            <input type="text" class="form-control" id="team" name="team">
        </div>
        <button type="submit" class="btn btn-primary">Thêm phim</button>
    </form>
</div>