<div class="mt-4">
    <h3>Sửa phim</h3>
    <form class="mt-4" method="POST" action="/movies/{{movie._id}}?_method=PUT">
        <div class="form-group">
            <label for="name">Tên phim</label>
            <input type="text" class="form-control" value="{{movie.name}}" id="name" name="name">
        </div>
        <div class="form-group">
            <label for="disc">Mô tả phim</label>
            <textarea class="form-control" id="disc" name="disc">{{movie.disc}}</textarea>
        </div>
        <div class="form-group">
            <label for="videoId">VideoId phim</label>
            <input type="text" class="form-control" value="{{movie.videoId}}" id="videoId" name="videoId">
        </div>
        <div class="form-group">
            <label for="team">Thể loại phim</label>
            <input type="text" class="form-control" value="{{movie.team}}" id="team" name="team">
        </div>
        <button type="submit" class="btn btn-primary">Lưu</button>
    </form>
</div>